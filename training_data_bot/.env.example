# Training Data Bot Configuration
# Copy this file to .env and fill in your values

# Application Settings
TDB_ENVIRONMENT=development
TDB_DEBUG=false
TDB_LOG_LEVEL=INFO

# Logging Configuration
TDB_LOG_FILE=logs/training_data_bot.log
TDB_ENABLE_STRUCTURED_LOGGING=true

# AI Provider API Keys
TDB_OPENAI_API_KEY=your_openai_api_key_here
TDB_ANTHROPIC_API_KEY=your_anthropic_api_key_here
TDB_DEFAULT_AI_PROVIDER=openai

# OpenAI Configuration
TDB_OPENAI_MODEL=gpt-3.5-turbo
TDB_OPENAI_MAX_TOKENS=4000
TDB_OPENAI_TEMPERATURE=0.7

# Anthropic Configuration
TDB_ANTHROPIC_MODEL=claude-3-sonnet-20240229
TDB_ANTHROPIC_MAX_TOKENS=4000

# Text Processing Settings
TDB_CHUNK_SIZE=1000
TDB_CHUNK_OVERLAP=200
TDB_MAX_WORKERS=4
TDB_BATCH_SIZE=10

# Quality Control
TDB_QUALITY_THRESHOLD=0.7
TDB_ENABLE_QUALITY_FILTERING=true

# File Processing
TDB_MAX_FILE_SIZE_MB=100
TDB_DEFAULT_ENCODING=utf-8

# Web Scraping
TDB_WEB_TIMEOUT=30.0
TDB_ENABLE_WEB_CACHING=true
TDB_WEB_CACHE_TTL=3600

# Storage
TDB_OUTPUT_DIRECTORY=output
TDB_TEMP_DIRECTORY=temp
TDB_DEFAULT_EXPORT_FORMAT=jsonl

# Database (Optional)
# TDB_DATABASE_URL=postgresql://user:password@localhost:5432/training_data_bot

# Performance Settings
TDB_REQUEST_TIMEOUT=30.0
TDB_RETRY_ATTEMPTS=3
TDB_RETRY_DELAY=1.0
TDB_ENABLE_PARALLEL_PROCESSING=true

# Rate Limiting
TDB_REQUESTS_PER_MINUTE=60
TDB_REQUESTS_PER_HOUR=3600

# Security
TDB_MAX_REQUEST_SIZE_MB=50
# TDB_ALLOWED_DOMAINS=example.com,trusted-site.com
# TDB_BLOCKED_DOMAINS=malicious-site.com