# OpenAI Configuration
TDB_OPENAI_API_KEY=sk-your-openai-key-here
TDB_OPENAI_MODEL=gpt-3.5-turbo

# Anthropic Configuration (optional)
TDB_ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
TDB_ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Application Settings
TDB_ENVIRONMENT=development
TDB_LOG_LEVEL=INFO
TDB_DEBUG=false

# Processing Configuration
TDB_CHUNK_SIZE=1000
TDB_CHUNK_OVERLAP=200
TDB_MAX_WORKERS=4
TDB_BATCH_SIZE=10

# Quality Control
TDB_QUALITY_THRESHOLD=0.75
TDB_ENABLE_QUALITY_FILTERING=true

# File Processing
TDB_MAX_FILE_SIZE_MB=100
TDB_OUTPUT_DIRECTORY=output
TDB_TEMP_DIRECTORY=temp